#!/bin/zsh

print -P "%F{green}>> %BAdding dir%b: /home/carbon/code/sync%f"
git add /home/$(whoami)/code/sync
print -P "%F{green}>> Generating commit message...%f"
git commit -m "Updated from <$(whoami)> on <$(hostname)> on <$(date)> - Message: $1"
print -P ""
print -P ">> %F{green} Committed changes with message: %f"
print -P ">> Updated from %F{cyan}<$(whoami)> %f on %F{cyan}<$(hostname)>%f on %{green}<$(date)>%f - Message: $1"
print -P ">> Pushing to sync repo..."
print -P ""
git push
print -P ">> Success!"
